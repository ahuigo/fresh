      "program": "${workspaceFolder}/examples/counter/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect",
        "--inspect-brk",
        "-A"
