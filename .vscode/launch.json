    {
      "request": "launch",
      "name": "test",
      "type": "pwa-node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--allow-all",
        "--inspect-brk"
      ],
      "smartStep": false,
      "attachSimplePort": 9229
    }
  ]
}
